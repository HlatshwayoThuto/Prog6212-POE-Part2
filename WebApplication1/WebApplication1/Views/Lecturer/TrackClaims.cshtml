@model IEnumerable<WebApplication1.Models.Claim>
@{
    ViewData["Title"] = "Track Claims";
}
<h2>Track Claims</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No claims yet.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Lecturer</th>
                <th>Total (R)</th>
                <th>Status</th>
                <th>Submitted</th>
                <th>Docs</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.LecturerName</td>
                    <td>@c.TotalAmount.ToString("N2")</td>
                    <td>
                        @if (c.Status == "Pending")
                        {
                            <span class="badge bg-secondary">Pending</span>
                        }
                        else if (c.Status == "Verified")
                        {
                            <span class="badge bg-info">Verified</span>
                        }
                        else if (c.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (c.Status == "Rejected")
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                    </td>
                    <td>@c.SubmissionDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @foreach (var d in c.Documents)
                        {
                            <a asp-action="DownloadDocument" asp-route-documentId="@d.DocumentId" class="btn btn-sm btn-outline-primary mb-1">@d.FileName</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
